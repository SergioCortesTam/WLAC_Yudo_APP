<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorOnSecondary">@color/text_white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnError">@color/text_white</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <!-- Texto -->
    <style name="TextAppearance.App.Display" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif-bold</item>
        <item name="android:textSize">@dimen/text_display</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif-bold</item>
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif-bold</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-bold</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Botones -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Body</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/corner_md</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.App.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="rippleColor">@color/accent_light</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Body</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/corner_md</item>
        <item name="strokeColor">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <!-- CardView -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_md</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="contentPadding">@dimen/spacing_md</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_sm</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_sm</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_sm</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_sm</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
