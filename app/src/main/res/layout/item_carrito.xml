<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Columna con la información del producto (nombre y precio) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre del producto en negrita -->
        <TextView
            android:id="@+id/txt_nombre_producto_carrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Producto"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Precio del producto -->
        <TextView
            android:id="@+id/txt_precio_producto_carrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€0.00"/>
    </LinearLayout>

    <!-- Muestra la cantidad seleccionada del producto -->
    <TextView
        android:id="@+id/txt_cantidad_carrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty: 1"
        android:layout_marginEnd="10dp"/>

    <!-- Botón para eliminar el producto del carrito -->
    <ImageButton
        android:id="@+id/btn_eliminar_item_carrito"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Eliminar"
        android:background="?attr/selectableItemBackgroundBorderless"/>
</LinearLayout>
