<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tarjeta principal con imagen y texto sobre la historia del club -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_lg"
            app:cardElevation="@dimen/elevation_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Imagen representativa del club -->
                <ImageView
                    android:id="@+id/imagen_club"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wlac"
                    android:contentDescription="Logo del club" />

                <!-- Título y descripción de la historia -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:id="@+id/titulo_historia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nuestra historia"
                        android:textAppearance="@style/TextAppearance.App.Headline"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <TextView
                        android:id="@+id/texto_historia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Las artes marciales son una disciplina que une la habilidad mental y física con el autocontrol. Si quieres desarrollar seguridad en ti mismo, fortaleza física y mental y velocidad en la toma de decisiones, apuntarte a clases de yudo, yu-yitsu o de defensa personal."
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:lineSpacingExtra="8dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta que explica los valores del club -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:layout_marginVertical="@dimen/spacing_sm"
            app:cardCornerRadius="@dimen/corner_lg"
            app:cardElevation="@dimen/elevation_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Título de la sección -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuestros valores"
                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <!-- Valor: Respeto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_contrasena"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:contentDescription="Icono de perseverancia" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Respeto"
                            android:textAppearance="@style/TextAppearance.App.BodyLarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="El respeto mutuo entre alumnos y maestros es la base de nuestra escuela."
                            android:textAppearance="@style/TextAppearance.App.Body" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Valor: Disciplina -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_contrasena"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:contentDescription="Icono de disciplina" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disciplina"
                            android:textAppearance="@style/TextAppearance.App.BodyLarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="La constancia y el trabajo diario forman parte de nuestro método de enseñanza."
                            android:textAppearance="@style/TextAppearance.App.Body" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Valor: Superación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_contrasena"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:contentDescription="Icono de superación" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Superación"
                            android:textAppearance="@style/TextAppearance.App.BodyLarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Creemos en el crecimiento personal y la superación de límites."
                            android:textAppearance="@style/TextAppearance.App.Body" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta promocional con botón para contactar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_lg"
            app:cardElevation="@dimen/elevation_card"
            app:cardBackgroundColor="@color/primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Llamado a la acción para nuevos alumnos -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Te gustaría unirte a nosotros?"
                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="En WLAC Yudo te ofrecemos clases grupales e individuales..."
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <!-- Botón para contactar por email -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_contactar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contáctanos"
                    android:textColor="@color/primary"
                    android:clickable="true"
                    android:focusable="true"
                    app:backgroundTint="@color/text_white"
                    app:icon="@drawable/ic_email"
                    app:iconTint="@color/primary"
                    app:rippleColor="@color/primary_light" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mapa de ubicación del dojo con imagen simulada -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_md"
            app:cardCornerRadius="@dimen/corner_lg"
            app:cardElevation="@dimen/elevation_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Título del mapa -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visítanos"
                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <!-- Mapa simulado con un marcador centrado -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <!-- Imagen estática del mapa, clicable para abrir la app de mapas -->
                    <ImageView
                        android:id="@+id/img_mapa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mapa_ubicacion"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:contentDescription="Haz clic para abrir la ubicación en el mapa" />

                    <!-- Marcador visual sobre el mapa -->
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location_marker"
                        android:contentDescription="Marcador de ubicación" />
                </FrameLayout>

                <!-- Dirección del dojo bajo el mapa -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="Avenida De Juan Carlos I S/N, Parla, Madrid, 28981"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:gravity="center" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
