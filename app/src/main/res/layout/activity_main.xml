<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F44336"
        android:paddingHorizontal="10dp">

        <Button
            android:id="@+id/btn_historia"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Historia"
            android:textColor="#fff"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_horarios"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Horarios"
            android:textColor="#fff"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_productos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:textColor="#fff"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#fff"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Contenido dinÃ¡mico -->
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/top_nav"
        android:layout_above="@id/bottom_nav"
        android:padding="16dp" />

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#eeeeee"
        android:gravity="center"
        android:paddingHorizontal="5dp">

        <ImageButton
            android:id="@+id/btn_vimeo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vimeo"
            android:background="@android:color/transparent"
            android:contentDescription="Vimeo" />

        <ImageButton
            android:id="@+id/btn_x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_x"
            android:background="@android:color/transparent"
            android:contentDescription="Twitter X" />

        <ImageButton
            android:id="@+id/btn_whatsapp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_whatsapp"
            android:background="@android:color/transparent"
            android:contentDescription="WhatsApp" />

        <ImageButton
            android:id="@+id/btn_youtube"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_youtube"
            android:background="@android:color/transparent"
            android:contentDescription="YouTube" />

        <ImageButton
            android:id="@+id/btn_instagram"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_instagram"
            android:background="@android:color/transparent"
            android:contentDescription="Instagram" />

        <ImageButton
            android:id="@+id/btn_facebook"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"
            android:background="@android:color/transparent"
            android:contentDescription="Facebook" />
    </LinearLayout>


</RelativeLayout>
