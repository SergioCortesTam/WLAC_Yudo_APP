<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_asistencia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Botón para abrir el selector de fecha -->
    <Button
        android:id="@+id/btn_seleccionar_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Fecha" />

    <!-- Muestra la fecha elegida -->
    <TextView
        android:id="@+id/tv_fecha_seleccionada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ninguna fecha seleccionada"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>

    <!-- Detalle de asistencia -->
    <TextView
        android:id="@+id/tv_detalle_asistencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aquí se mostrará la asistencia"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
