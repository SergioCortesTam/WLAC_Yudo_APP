<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Club de Judo"
            android:textAppearance="@style/TextAppearance.App.Display"
            android:textColor="@color/primary"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Selector de grupo -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecciona un grupo"
            android:layout_marginBottom="@dimen/spacing_md">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/selector_grupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Selector de turno -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selecciona turno"
            android:layout_marginBottom="@dimen/spacing_md">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/selector_turno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tabla de horarios -->
        <TableLayout
            android:id="@+id/tabla_horarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginBottom="@dimen/spacing_lg">

            <TableRow android:background="@color/primary" android:padding="@dimen/spacing_sm">
                <TextView android:text="Día" android:textColor="@color/text_white" android:textStyle="bold"/>
                <TextView android:text="Hora" android:textColor="@color/text_white" android:textStyle="bold"/>
                <TextView android:text="Grupo" android:textColor="@color/text_white" android:textStyle="bold"/>
            </TableRow>

            <!-- Las filas se llenan desde Java -->
        </TableLayout>

        <!-- Card Precios -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <!-- Título con icono -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:src="@drawable/ic_contrasena"
                        android:layout_marginEnd="@dimen/spacing_sm"/>

                    <TextView
                        android:id="@+id/titulo_precios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precios"
                        android:textAppearance="@style/TextAppearance.App.Title"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <!-- Cards de precios -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Precio Chiquiyudo -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        app:cardBackgroundColor="@color/cinturon_blanco"
                        app:cardCornerRadius="@dimen/corner_md"
                        app:strokeColor="@color/primary_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_md">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chiquiyudo"
                                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                                    android:textColor="@color/text_primary"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nacidos en 2018 y 2017"
                                    android:textAppearance="@style/TextAppearance.App.Caption"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10,00 €"
                                android:textAppearance="@style/TextAppearance.App.Headline"
                                android:textColor="@color/primary"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Precio Yudo Infantil - similar estructura -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        app:cardBackgroundColor="@color/cinturon_amarillo"
                        app:cardCornerRadius="@dimen/corner_md"
                        app:strokeColor="@color/primary_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_md">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yudo Infantil"
                                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                                    android:textColor="@color/text_primary"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2016 - 2010"
                                    android:textAppearance="@style/TextAppearance.App.Caption"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18,00 €"
                                android:textAppearance="@style/TextAppearance.App.Headline"
                                android:textColor="@color/primary"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Precio Yudo Juvenil - similar estructura -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/cinturon_verde"
                        app:cardCornerRadius="@dimen/corner_md"
                        app:strokeColor="@color/primary_light"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_md">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yudo Juvenil"
                                    android:textAppearance="@style/TextAppearance.App.Subtitle"
                                    android:textColor="@color/text_primary"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nacidos en 2009 y anteriores"
                                    android:textAppearance="@style/TextAppearance.App.Caption"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20,00 €"
                                android:textAppearance="@style/TextAppearance.App.Headline"
                                android:textColor="@color/primary"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de Contacto -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_contactar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Contacta con nosotros para inscribirte!"
            android:textColor="@color/text_white"
            android:backgroundTint="@color/colorPrimary"
            style="@style/Widget.App.Button.Secondary"
            android:layout_marginTop="@dimen/spacing_md" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>